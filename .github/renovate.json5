{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:base",
    "npm:unpublishSafe",
    "group:monorepos",
  ],
  "git-submodules": {
    enabled: true,
  },
  dependencyDashboard: false,
  labels: ["dependencies"],
  timezone: 'America/Chicago',
  lockFileMaintenance: {
    enabled: true,
    schedule: ["before 4am on the first day of the month"],
  },
  platformCommit: true,
  semanticCommits: "disabled",

  packageRules: [
    {
      matchPaths: ["blackbox-log/**"],
      matchDepTypes: ["dependencies"],
      rangeStrategy: "widen",
      prPriority: 1,
    },
    {
      matchPaths: ["blackbox-log-js/**"],
      matchDepTypes: ["dependencies"],
      prPriority: 1,
    },
    {
      matchDepTypes: ["devDependencies"],
      prPriority: -1,
    },
  ],
}