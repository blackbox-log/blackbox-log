{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>blackbox-log/renovate-config"
  ],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchFiles": [
        "Cargo.toml"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "rangeStrategy": "widen"
    },
    {
      "matchFiles": [
        "codegen/Cargo.toml"
      ],
      "matchUpdateTypes": "patch",
      "schedule": [
        "before 4am"
      ],
      "automerge": true
    }
  ]
}